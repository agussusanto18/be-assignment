datasource db {
  provider = "mongodb"
  url      = env("MONGO_URI")
}

generator client {
  provider = "prisma-client-js"
}

model Transaction {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  accountId   String
  amount      Float
  currency    String
  toAddress   String?
  status      String  @default("PENDING")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}